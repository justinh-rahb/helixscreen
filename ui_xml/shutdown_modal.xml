<!-- NOTE: Backdrop created programmatically by Modal system -->
<component>
  <!-- shutdown_pending subject: 0=confirm, 1=shutting down, 2=rebooting
       Owned by ShutdownModal C++ class, registered into component scope -->
  <view name="shutdown_modal"
        extends="ui_dialog" width="70%" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- Header row: icon + title + close button -->
    <lv_obj width="100%" height="content"
            style_pad_left="#space_lg" style_pad_right="#space_sm" style_pad_top="#space_lg"
            style_pad_bottom="#space_sm" flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_sm">
      <icon name="header_icon" src="power" size="md" variant="warning"/>
      <text_heading text="Shutdown / Reboot" translation_tag="Shutdown / Reboot" style_text_align="left" flex_grow="1"/>
      <ui_button name="btn_close" width="40" height="40" variant="ghost" icon="close" focusable="false">
        <event_cb trigger="clicked" callback="on_modal_cancel_clicked"/>
      </ui_button>
    </lv_obj>

    <!-- Content: confirm state (visible when shutdown_pending == 0) -->
    <lv_obj name="confirm_container"
            width="100%" height="content" style_min_height="80"
            style_pad_left="#space_lg" style_pad_right="#space_lg"
            style_pad_top="0" style_pad_bottom="#space_lg">
      <bind_flag_if_not_eq subject="shutdown_pending" flag="hidden" ref_value="0"/>
      <text_body name="dialog_message"
                 width="100%" text="Are you sure? This will power off or restart the printer host." translation_tag="Are you sure? This will power off or restart the printer host."
                 style_text_align="left" long_mode="wrap"/>
    </lv_obj>

    <!-- Content: shutting down state (shown when shutdown_pending == 1) -->
    <lv_obj name="shutdown_container"
            width="100%" height="content" style_min_height="80" hidden="true"
            flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center"
            style_pad_all="#space_lg" style_pad_gap="#space_sm">
      <bind_flag_if_not_eq subject="shutdown_pending" flag="hidden" ref_value="1"/>
      <spinner size="lg"/>
      <text_muted text="Shutting down..." translation_tag="Shutting down..."/>
    </lv_obj>

    <!-- Content: rebooting state (shown when shutdown_pending == 2) -->
    <lv_obj name="reboot_container"
            width="100%" height="content" style_min_height="80" hidden="true"
            flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center"
            style_pad_all="#space_lg" style_pad_gap="#space_sm">
      <bind_flag_if_not_eq subject="shutdown_pending" flag="hidden" ref_value="2"/>
      <spinner size="lg"/>
      <text_muted text="Rebooting..." translation_tag="Rebooting..."/>
    </lv_obj>

    <!-- Button row: Shutdown (danger) | Reboot â€” X button handles cancel -->
    <!-- Wrapped in lv_obj so bind_flag works (can't be child of component instance) -->
    <lv_obj name="shutdown_buttons_wrapper" width="100%" height="content" style_pad_all="0">
      <bind_flag_if_not_eq subject="shutdown_pending" flag="hidden" ref_value="0"/>
      <modal_button_row name="shutdown_buttons"
                        secondary_icon="restart" secondary_text="Reboot" secondary_callback="on_modal_tertiary_clicked"
                        primary_icon="power" primary_text="Shutdown" primary_callback="on_modal_ok_clicked" primary_bg_color="#danger"/>
    </lv_obj>
  </view>
</component>
