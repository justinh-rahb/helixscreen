<component>
  <!-- Unified Temperature Graph Overlay -->
  <!-- Shows all temperature sensors with toggle chips and optional heater controls -->
  <view name="temp_graph_overlay" extends="overlay_panel" title="Temperature" title_tag="Temperature">
    <!-- Chip row: horizontally scrollable series toggle chips -->
    <lv_obj name="chip_row"
            width="100%" height="content"
            style_pad_hor="#space_md" style_pad_ver="#space_xs"
            style_border_opa="0" scrollable="true"
            flex_flow="row" style_pad_gap="#space_xs"
            style_flex_cross_place="center">
      <!-- Chips populated programmatically in C++ -->
    </lv_obj>

    <!-- Graph container: fills available space -->
    <lv_obj name="graph_container"
            width="100%" flex_grow="1"
            style_pad_all="0" style_pad_left="#space_xs"
            scrollable="false" style_border_opa="0">
      <!-- Temperature graph created programmatically in C++ -->
    </lv_obj>

    <!-- Control strip: heater presets + custom, hidden in graph-only mode -->
    <lv_obj name="control_strip"
            width="100%" height="content"
            style_pad_hor="#space_md" style_pad_top="#space_xs" style_pad_bottom="#space_sm"
            style_border_opa="0" scrollable="false"
            flex_flow="column" style_pad_gap="#space_xs"
            flag_hidden="true">
      <!-- Current temperature display row -->
      <lv_obj name="control_temp_row"
              width="100%" height="content"
              style_pad_all="0" scrollable="false" style_border_opa="0"
              flex_flow="row" style_flex_main_place="center"
              style_pad_gap="#space_sm" style_flex_cross_place="center">
        <text_body name="control_temp_label" text="" style_text_align="center"/>
      </lv_obj>

      <!-- Preset button grid -->
      <lv_obj name="preset_grid"
              width="100%" height="content"
              style_pad_all="0" scrollable="false"
              flex_flow="row_wrap" style_flex_main_place="space_between"
              style_pad_gap="#space_xs">
        <ui_button name="preset_off"
                   width="24%" text="Off" translation_tag="Off"
                   variant="ghost" style_border_width="#border_width"
                   style_border_color="#border" style_border_opa="255">
          <event_cb trigger="clicked" callback="on_temp_graph_preset_clicked"/>
        </ui_button>
        <ui_button name="preset_1" width="24%" text="PLA" translation_tag="PLA">
          <event_cb trigger="clicked" callback="on_temp_graph_preset_clicked"/>
        </ui_button>
        <ui_button name="preset_2" width="24%" text="PETG" translation_tag="PETG">
          <event_cb trigger="clicked" callback="on_temp_graph_preset_clicked"/>
        </ui_button>
        <ui_button name="preset_3" width="24%" text="ABS" translation_tag="ABS">
          <event_cb trigger="clicked" callback="on_temp_graph_preset_clicked"/>
        </ui_button>
      </lv_obj>

      <!-- Custom temperature button -->
      <ui_button name="btn_custom" width="100%" text="Custom..." translation_tag="Custom..." variant="secondary">
        <event_cb trigger="clicked" callback="on_temp_graph_custom_clicked"/>
      </ui_button>

      <!-- Extruder selector row (shown only in nozzle mode with multi-extruder) -->
      <lv_obj name="extruder_selector_row"
              width="100%" height="content"
              style_pad_all="0" scrollable="false" style_border_opa="0"
              flex_flow="row" style_pad_gap="#space_xs"
              style_flex_main_place="center"
              flag_hidden="true">
        <!-- Populated programmatically in C++ -->
      </lv_obj>
    </lv_obj>
  </view>
</component>
