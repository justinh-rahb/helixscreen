<!-- LED Chip Row: Multi-select chip/tag interface for LED selection -->
<!-- Chips are created dynamically in C++ (count varies per printer) -->
<component>
  <api>
    <prop name="label" type="string" default="LEDs"/>
    <prop name="label_tag" type="string" default=""/>
    <prop name="icon" type="string" default="light"/>
    <prop name="description" type="string" default=""/>
    <prop name="description_tag" type="string" default=""/>
  </api>
  <view name="led_chip_row"
        extends="lv_obj" width="100%" height="content" flex_flow="column"
        style_bg_opa="0" style_border_width="0" style_pad_left="#space_lg"
        style_pad_right="#space_lg" style_pad_top="#space_md" style_pad_bottom="#space_md"
        style_pad_gap="#space_sm" scrollable="false">
    <!-- Header row: icon + label + description -->
    <lv_obj width="100%" height="content" flex_flow="row"
            style_flex_main_place="start" style_flex_cross_place="center"
            style_bg_opa="0" style_border_width="0" style_pad_all="0"
            style_pad_gap="#space_sm" scrollable="false">
      <icon name="row_icon" src="$icon" size="sm" variant="secondary"/>
      <lv_obj height="content" style_pad_all="0" flex_flow="column"
              style_pad_gap="#space_xs" flex_grow="1" scrollable="false">
        <text_body name="label" text="$label" translation_tag="$label_tag"/>
        <text_small name="description" text="$description" translation_tag="$description_tag"/>
      </lv_obj>
    </lv_obj>
    <!-- Chip container: populated dynamically in C++ -->
    <lv_obj name="chip_container" width="100%" height="content"
            flex_flow="row_wrap" style_pad_gap="#space_sm"
            style_flex_main_place="end"
            style_bg_opa="0" style_border_width="0" style_pad_all="0"
            scrollable="false"/>
  </view>
</component>
