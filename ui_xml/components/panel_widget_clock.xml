<component>
  <view extends="lv_obj"
        width="100%" height="100%" style_pad_all="#space_sm" style_pad_gap="0"
        style_bg_opa="0%" scrollable="false"
        flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center">
    <!-- Time (always visible) -->
    <text_heading name="clock_time" bind_text="clock_time_text"/>
    <!-- Date (hidden in compact 1x1 mode) -->
    <text_body name="clock_date" bind_text="clock_date_text">
      <bind_flag_if_eq subject="clock_size_mode" flag="hidden" ref_value="0"/>
    </text_body>
    <!-- Uptime (only in expanded 2x2+ mode) -->
    <text_small name="clock_uptime" bind_text="clock_uptime_text" style_text_color="#text_muted">
      <bind_flag_if_not_eq subject="clock_size_mode" flag="hidden" ref_value="2"/>
    </text_small>
  </view>
</component>
