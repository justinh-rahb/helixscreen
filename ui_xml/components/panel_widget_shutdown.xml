<component>
  <view name="panel_widget_shutdown" extends="lv_obj"
        height="100%" flex_grow="1" style_pad_all="0" scrollable="false">
    <ui_button name="shutdown_button"
               width="100%" height="100%" variant="ghost" style_border_width="0" focusable="false">
      <bind_state_if_not_eq subject="printer_connection_state" state="disabled" ref_value="2"/>
      <icon name="shutdown_icon" src="power" size="#icon_size" align="center" variant="secondary"/>
      <event_cb trigger="clicked" callback="shutdown_clicked_cb"/>
    </ui_button>
  </view>
</component>
